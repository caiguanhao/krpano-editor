block variables
  title = "Deleting " + tours.name + " - Virtual Tours"

extends ../layout

block content
  article.container(role='main')
    ol.breadcrumb
      li
        a(href='/') Home
      li
        a(href='/tours') Tours
      li
        a(href='/tours/'+tours.id)= tours.name
      li.pull-right.active Delete
      li.pull-right
        a(href='/tours/'+tours.id+'/edit') Edit
    .row
      .col-md-offset-3.col-md-6
        .panel.panel-default
          .panel-heading Delete
          .panel-body.text-center
            p Are you sure you want to delete this tour?
            form(role='form', action='/tours/'+tours.id, method='POST')
              input(type='hidden', name='_method', value='DELETE')
              .btn-group
                button.btn.btn-danger(type='submit', name='confirm', value='yes') Yes, delete this virtual tour.
                button.btn.btn-default(type='submit', name='confirm', value='no') No.
