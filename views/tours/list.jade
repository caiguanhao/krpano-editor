block variables
  title = "All Virtual Tours"

extends ../layout

block content
  article.container(role='main')
    ol.breadcrumb
      li
        a(href='/') Home
      li.active Tours
    .text-right
      a.btn.btn-primary(href='/tours/new')
        span.glyphicon.glyphicon-plus
        = ' Add Virtual Tours'
    table.table.table-striped
      thead
        tr
          th Name
          th Description
          th Created At
      tbody
        - for tour in tours
          tr
            td
              a(href='/tours/'+tour.id)= tour.name
              = ' ['
              a(href='/tours/'+tour.id+'/edit') edit
              | ]
            td= tour.desc
            td
              - var created_at = new Date(parseInt(tour.created_at+'000'))
              abbr.timeago(title=created_at.toISOString())= created_at
