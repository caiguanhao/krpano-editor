block variables
  title = "Editing " + tours.name + " - Virtual Tours"

extends ../layout

block content
  article.container(role='main')
    ol.breadcrumb
      li
        a(href='/') Home
      li
        a(href='/tours') Tours
      li
        a(href='/tours/'+tours.id)= tours.name
      li.pull-right
        a(href='/tours/'+tours.id+'/delete') Delete
      li.pull-right.active Edit
    .row
      .col-md-offset-2.col-md-8
        form.form-horizontal(role='form', action='/tours/'+tours.id, method='POST')
          .form-group
            label.col-lg-2.control-label(for='inputName') Name
            .col-lg-10
              input#inputName.form-control(type='text', name='name', value=body?body.name:tours.name, placeholder='Name of virtual tour')
          .form-group
            label.col-lg-2.control-label(for='inputDesc') Description
            .col-lg-10
              input#inputDesc.form-control(type='text', name='desc', value=body?body.desc:tours.desc, placeholder='Description of virtual tour')
          .form-group
            .col-lg-offset-2.col-lg-10
              button.btn.btn-default(type='submit') Update Virtual Tour
