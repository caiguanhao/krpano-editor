block variables
  title = "Create Virtual Tours"

extends ../layout

block content
  article.container(role='main')
    ol.breadcrumb
      li
        a(href='/') Home
      li
        a(href='/tours') Tours
      li.active Create
    .row
      .col-md-offset-2.col-md-8
        form.form-horizontal(role='form', action='/tours', method='POST')
          .form-group
            label.col-lg-2.control-label(for='inputName') Name
            .col-lg-10
              input#inputName.form-control(type='text', name='name', value=body?body.name:'', placeholder='Name of virtual tour')
          .form-group
            label.col-lg-2.control-label(for='inputDesc') Description
            .col-lg-10
              input#inputDesc.form-control(type='text', name='desc', value=body?body.desc:'', placeholder='Description of virtual tour')
          .form-group
            .col-lg-offset-2.col-lg-10
              button.btn.btn-default(type='submit') Create Virtual Tour
